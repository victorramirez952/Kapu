<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".EditOngDesc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Kapu -->
        <TextView
            android:id="@+id/tv_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kapu"
            android:textSize="24sp"
            android:textColor="@color/colorText"
            android:gravity="center"
            android:background="@drawable/header_background"
            android:paddingVertical="16dp"/>

        <!-- Edit Description Title -->
        <TextView
            android:id="@+id/tv_edit_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar descripcion"
            android:textSize="20sp"
            android:textColor="@color/colorText"
            android:gravity="center"
            android:paddingVertical="12dp"/>

        <!-- Name of ONG -->
        <TextView
            android:id="@+id/tv_name_ong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre ONG"
            android:textSize="20sp"
            android:textColor="@color/colorText"
            android:gravity="center"
            android:paddingVertical="12dp"/>

        <!-- Edit Description Section -->
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción:"
            android:textSize="16sp"
            android:textColor="@color/colorText"
            android:gravity="center"
            android:paddingVertical="8dp"/>

        <EditText
            android:id="@+id/et_Description"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:hint="Escriba la descripción aquí"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:inputType="textMultiLine"/>

        <!-- Buttons for Cancel and Save Changes -->
        <LinearLayout
            android:id="@+id/ll_btns_edit_ong_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingVertical="16dp">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:layout_weight="1"
                android:textColor="@color/colorText"
                android:backgroundTint="@color/colorButton"
                android:paddingVertical="12dp"/>

            <Button
                android:id="@+id/btn_save_changes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Guardar cambios"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:backgroundTint="@color/colorButton"
                android:paddingVertical="12dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
