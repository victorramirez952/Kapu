<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".EditProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- User Profile Header -->
        <LinearLayout
            android:id="@+id/ll_user_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:id="@+id/iv_user_profile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@color/green"
                android:padding="10dp" android:src="@drawable/averusuario" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre usuario"
                android:textSize="20sp"
                android:textColor="@color/colorText"
                android:gravity="center"
                android:paddingHorizontal="8dp"/>
        </LinearLayout>

        <!-- Email Edit Section -->
        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textSize="16sp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"/>

        <!-- First Name Edit Section -->
        <EditText
            android:id="@+id/et_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre(s)"
            android:inputType="textPersonName"
            android:textSize="16sp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"/>

        <!-- Last Name Edit Section -->
        <EditText
            android:id="@+id/et_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apellidos"
            android:inputType="textPersonName"
            android:textSize="16sp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"/>

        <!-- Phone Edit Section -->
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teléfono"
            android:inputType="phone"
            android:textSize="16sp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"/>

        <!-- Password Edit Section -->
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"/>

        <!-- Buttons Section -->
        <LinearLayout
            android:id="@+id/ll_btns_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingVertical="16dp">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:layout_weight="1"
                android:textColor="@color/colorText"
                android:backgroundTint="@color/colorButton"
                android:paddingVertical="12dp"/>

            <Button
                android:id="@+id/btn_save_changes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Guardar cambios"
                android:layout_weight="1"
                android:textColor="@color/colorText"
                android:backgroundTint="@color/colorButton"
                android:paddingVertical="12dp"/>
        </LinearLayout>

        <!-- Collaborator Request Section -->
        <LinearLayout
            android:id="@+id/ll_ask_for_collaborator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
        <TextView
            android:id="@+id/tv_ask_for_collaborator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Envía una petición para convertirte en colaborador. Esto requiere tiempo y un proceso externo."
            android:textSize="16sp"
            android:textColor="@color/colorText"
            android:paddingVertical="8dp"/>

        <Button
            android:id="@+id/btn_ask_for_collaborator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Solicitar ser colaborador"
            android:textColor="@color/colorText"
            android:backgroundTint="@color/colorButton"
            android:paddingVertical="12dp"/>

        <!-- Danger Zone Section -->
        <TextView
            android:id="@+id/tv_danger_zone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zona de peligro"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:paddingVertical="8dp"/>

        <TextView
            android:id="@+id/tv_delete_account_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toda tu información de tu cuenta se eliminará definitivamente. Ten precaución."
            android:textSize="16sp"
            android:textColor="@color/colorText"
            android:paddingVertical="8dp"/>

        <Button
            android:id="@+id/btn_delete_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eliminar cuenta"
            android:textColor="@color/white"
            android:backgroundTint="@color/red"
            android:paddingVertical="12dp"/>

    </LinearLayout>

</ScrollView>
