<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".AddVolunteering">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_kapu_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kapu"
            android:textSize="24sp"
            android:textColor="@color/colorText"
            android:gravity="center"
            android:background="@drawable/header_background"
            android:paddingVertical="16dp"/>

        <TextView
            android:id="@+id/tv_add_volunteering"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar voluntariado"
            android:textSize="20sp"
            android:textColor="@color/colorText"
            android:gravity="center"
            android:paddingVertical="12dp"/>

        <EditText
            android:id="@+id/et_voluntariado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del voluntariado"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/et_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha inicio (YYYY-MM-DD)"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/et_end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha fin (YYYY-MM-DD)"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"/>

        <!-- Days checkboxes and labels -->
        <!-- Include the CheckBox and TextView for each day as in the following example -->
        <!-- Repeat for Monday, Tuesday, Wednesday, etc. -->




        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            >

            <CheckBox
                android:id="@+id/cb_monday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:text="Lunes"
                android:padding="12dp"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            >

            <CheckBox
                android:id="@+id/cb_tuesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Martes"
                android:textColor="@color/colorText"
                android:padding="12dp"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            >

            <CheckBox
                android:id="@+id/cb_wednesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:text="Miercoles"
                android:padding="12dp"/>

        </FrameLayout>


        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            >

            <CheckBox
                android:id="@+id/cb_thursday"
                android:layout_width="match_parent"
                android:textColor="@color/colorText"
                android:layout_height="wrap_content"
                android:text="Jueves"
                android:padding="12dp"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            >

            <CheckBox
                android:id="@+id/cb_friday"
                android:layout_width="match_parent"
                android:textColor="@color/colorText"
                android:layout_height="wrap_content"
                android:text="Viernes"
                android:padding="12dp"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            >

            <CheckBox
                android:id="@+id/cb_saturday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:text="Sabado"
                android:padding="12dp"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            >

            <CheckBox
                android:id="@+id/cb_sunday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:text="Domingo"
                android:padding="12dp"/>

        </FrameLayout>



        <!-- Time input fields -->
        <EditText
            android:id="@+id/et_start_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hora inicio (HH:MM)"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/et_end_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hora fin (HH:MM)"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"/>

        <!-- Buttons for Cancel and Add -->
        <LinearLayout
            android:id="@+id/ll_btns_add_volunteering"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingVertical="16dp">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:backgroundTint="@color/colorButton"
                android:paddingVertical="12dp"/>

            <Button
                android:id="@+id/btn_add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Agregar"
                android:layout_weight="1"
                android:textColor="@color/colorText"
                android:backgroundTint="@color/black"
                android:paddingVertical="12dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
