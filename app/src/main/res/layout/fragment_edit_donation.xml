<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditOngDesc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kapu"
            android:textSize="20dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_edit_donation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar donativo"
            android:textSize="20dp"
            android:gravity="center"
            />


        <!--    Editar email -->
        <LinearLayout
            android:id="@+id/row_edit_donation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:gravity="left"
            android:orientation="vertical"
            android:padding="10dp"
            >

            <TextView
                android:id="@+id/tv_donation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donativo"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/et_donation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Donation"
                android:inputType="text"
                android:minHeight="48dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_donation"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/black"
            />

        <!--        Botones cancelar o editar -->
        <LinearLayout
            android:id="@+id/ll_btns_edit_donation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Cancelar" />

            <Button
                android:id="@+id/btn_save_changes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Guardar cambios" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>